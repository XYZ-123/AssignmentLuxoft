<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AssignmentLuxoft" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="AssignmentLuxoft.MainWindow"
        Title="TradeViewer" Height="600" Width="700" d:DataContext="{d:DesignInstance Type=local:TradeViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="140.573,15,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="{Binding DirectoryToWatch}" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="171" Grid.ColumnSpan="2" Cursor="Arrow"/>
        <DataGrid HorizontalAlignment="Left" Margin="10,218,0,0" VerticalAlignment="Top" Height="342" Width="674" Grid.ColumnSpan="2"/>
        <ListBox Grid.Column="1" ItemsSource="{Binding LoaderManager.Loaders}" DisplayMemberPath="SupportedSourceType"  HorizontalAlignment="Left" Height="182" Margin="286.8,15,0,0" VerticalAlignment="Top" Width="306"/>

    </Grid>
</Window>
